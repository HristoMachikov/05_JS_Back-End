<h1>Delete Cube</h1>
<div class="form">
  <form action='/remove/{{cube._id}}' method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{cube.name}}" disabled="true">
    <label for="name">Description</label>
    <textarea id="name" name="description" disabled="true">{{cube.description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{cube.imageUrl}}" disabled="true">
    <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="difficulty" disabled="true">
      {{!-- {{#each cube.difficultyLevels}}
      <option value="{{this.level}}" {{#if this.selected}} selected{{/if}}>{{this.level}} - {{this.levelName}}</option>
      {{/each}} --}}
       {{#each cube.options}}
      <option value="{{this.index}}" {{#if this.selected}} selected{{/if}}>{{this.title}}</option>
      {{/each}}
    </select>
    <input type="submit" value="Delete">
  </form>
</div>