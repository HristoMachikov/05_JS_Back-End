<section class="actions">
    <form action="/user/edit/{{user._id}}" method="POST">
        <h2>Salary time? Refill your account amount.</h2>
        <input type="text" id="refill-amount" name="addAmount">
        <button type="submit">Refill</button>
    </form>
    <div>
        <h2>New expense comming up?</h2>
        <a href="/expense/create">Add it now</a>
    </div>
</section>

<hr class="separator">
{{#if expenses}}
<table class="expenses">
    <thead>
        <tr>
            <th>Date</th>
            <th>Merchant</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Description</th>
        </tr>

    </thead>
    <tbody>
        {{#each expenses}}
        <tr>
            <td>
                <img src="/images/date.png" />
                <p>{{this.date}}</p>
            </td>
            <td>
                <p>Shoes</p>
                {{#if isReport}}
                <div class="report">
                    <a href="/expense/report/{{this._id}}">Report</a>
                </div>
                {{/if}}
            </td>
            <td>
                <img src="/images/amount.png" alt="">
                <p>лв {{this.total}}</p>
            </td>
            <td>
                <img src="/images/category.png" alt="">
                <p>{{this.category}}</p>
            </td>
            <td>
                <img src="/images/hastag.png" alt="">
                <p>{{this.description}}</p>
            </td>
        </tr>
        {{/each}}

